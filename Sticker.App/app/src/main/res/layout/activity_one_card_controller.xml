<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cro.stickerapp.oneCardModule.OneCardControllerActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_OCcontroller_bg"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/rv_OCcontroller_cardList"
        android:layout_centerInParent="true" />

    <ImageButton
        android:layout_width="28.33dp"
        android:layout_height="28.33dp"
        android:id="@+id/img_OCcontroller_back"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="false"
        android:layout_marginTop="13.33dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13.33dp"
        android:clickable="false" />

    <ImageButton
        android:layout_width="74.67dp"
        android:layout_height="74.67dp"
        android:id="@+id/img_OCcontroller_penalty"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:layout_marginTop="35.67dp"
        android:layout_marginRight="47.33dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel_OCcontroller_popup"
        android:clickable="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:alpha="0.4"/>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:id="@+id/rel_OCcontroller_waitPlayer"
            android:background="@drawable/shape_radius_white"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다른 플레이어를 기다리는 중입니다..."
                android:id="@+id/textView6"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/OC_baseColor" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="258.67dp"
            android:layout_height="173dp"
            android:background="@drawable/shape_radius_white"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:id="@+id/rel_OCcontroller_selectShape">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모양을 선택해주세요"
                    android:id="@+id/textView7"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/OC_baseColor"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34.67dp">

                    <ImageButton
                        android:layout_width="46.67dp"
                        android:layout_height="56.67dp"
                        android:id="@+id/ibtn_OCcontroller_shape_s"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@android:color/transparent" />

                    <ImageButton
                        android:layout_width="46.67dp"
                        android:layout_height="56.67dp"
                        android:id="@+id/ibtn_OCcontroller_shape_h"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@android:color/transparent" />

                    <ImageButton
                        android:layout_width="46.67dp"
                        android:layout_height="56.67dp"
                        android:id="@+id/ibtn_OCcontroller_shape_c"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@android:color/transparent" />

                    <ImageButton
                        android:layout_width="46.67dp"
                        android:layout_height="56.67dp"
                        android:id="@+id/ibtn_OCcontroller_shape_d"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@android:color/transparent" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
