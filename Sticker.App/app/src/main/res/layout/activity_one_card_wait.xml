<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cro.stickerapp.oneCardModule.OneCardWaitActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_OCwait_background"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="31.33dp"
            android:layout_height="31.33dp"
            android:id="@+id/img_OCwait_loading"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="다른 Player를 기다립니다..."
            android:layout_marginTop="8dp"
            android:textSize="14dp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="28.33dp"
        android:layout_height="28.33dp"
        android:id="@+id/img_OCwait_back"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="false"
        android:layout_marginTop="13.33dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13.33dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/rel_OCwait_startLayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="36.67dp"
            android:id="@+id/ibtn_OCwait_start"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:id="@+id/textView"
            android:layout_centerInParent="true"
            android:textSize="16dp"
            android:textColor="@color/OC_baseColor" />
    </RelativeLayout>

</RelativeLayout>
