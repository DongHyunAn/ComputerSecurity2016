<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".musicModule.MusicControllerActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_music_background"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"></ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/iv_music_soundoff"
                android:layout_gravity="left|top"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:src="@drawable/music_mute"
                />

            <SeekBar
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:id="@+id/sb_music_soundbar"
                android:layout_gravity="center_vertical"
                android:max="100"

                android:indeterminate="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:progressDrawable="@drawable/customseekbar"
                android:maxHeight="5dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/iv_music_soundon"
                android:layout_gravity="top|left"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:src="@drawable/music_speaker" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2FFFFFFF"
            android:layout_marginTop="19dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tv_music_title"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:layout_marginTop="11dp"
                    android:textColor="@android:color/black"
                    android:alpha="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tv_music_album"
                    android:layout_gravity="center_horizontal"

                    android:textSize="10dp"
                    android:layout_marginTop="2.33dp"
                    android:layout_marginBottom="6.67dp"
                    android:textColor="#4B4B4B"
                    android:background="@android:color/transparent" />

            </LinearLayout>

        </RelativeLayout>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sb_music_playbar"
            android:layout_marginTop="27.33dp"
            android:max="100"
            android:progressDrawable="@drawable/customseekbar"

            android:progress="0"
            android:indeterminate="false"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:maxHeight="4dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="#FFFFFF"
                android:id="@+id/tv_music_starttime"
                android:layout_alignParentRight="false"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="7.33dp"
                android:layout_marginLeft="16.33dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="#FFFFFF"
                android:id="@+id/tv_music_endtime"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7.33dp"
                android:layout_marginRight="16.33dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                >

                <ImageButton
                    android:layout_width="36.33dp"
                    android:layout_height="36.33dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/ibtn_music_listup"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="35.67dp"
                    android:layout_height="33dp"
                    android:id="@+id/iv_music_icon"
                    android:background="@android:color/transparent"
                    android:src="@drawable/music_list_icon"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="8.33dp"
                    android:layout_marginBottom="8.33dp" />

                <ImageButton
                    android:layout_width="36.33dp"
                    android:layout_height="36.33dp"
                    android:id="@+id/ibtn_music_listdown"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="53dp"
                        android:layout_height="51dp"
                        android:id="@+id/ibtn_music_before"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical"
                        android:scaleType="center"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="23.33dp"
                        android:layout_height="51dp"
                        android:id="@+id/iv_music_play"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical"
                        android:scaleType="center"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="53dp"
                        android:layout_height="51dp"
                        android:id="@+id/ibtn_music_stop"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical"
                        android:scaleType="center"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="53dp"
                        android:layout_height="51dp"
                        android:id="@+id/ibtn_music_next"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical"
                        android:scaleType="center"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="45.33dp"
                    android:layout_height="45.33dp"
                    android:id="@+id/iv_music_repeat"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/music_repeat"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:layout_width="45.3dp"
                    android:layout_height="45.3dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/iv_music_shuffle"
                    android:src="@drawable/music_shuffle" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:id="@+id/ibtn_music_back"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />
</RelativeLayout>
